<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsFragment"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/img_TopLine2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/top_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_const_StatisticLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/statistics_label"
        android:textColor="#4B4B4B"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/img_TopLine2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_TopLine2">

        <ImageView
            android:id="@+id/img_BackgroundForTotalSaved"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/edit_button_aqua"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_BackgroundForTotalPurchases" />

        <ImageView
            android:id="@+id/img_BackgroundForTotalPurchases"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/background_for_money_info_sand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_BackgroundForTotalSpent"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/background_for_money_info_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_const_TotalSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/total_spent"
            app:layout_constraintStart_toStartOf="@+id/img_BackgroundForTotalSpent"
            app:layout_constraintTop_toTopOf="@+id/img_BackgroundForTotalSpent" />

        <TextView
            android:id="@+id/tv_const_TotalPurchases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/total_purchases"
            app:layout_constraintStart_toStartOf="@+id/img_BackgroundForTotalPurchases"
            app:layout_constraintTop_toTopOf="@+id/img_BackgroundForTotalPurchases" />

        <TextView
            android:id="@+id/tv_const_TotalSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/total_saved"
            app:layout_constraintStart_toStartOf="@+id/img_BackgroundForTotalSaved"
            app:layout_constraintTop_toTopOf="@+id/img_BackgroundForTotalSaved" />

        <TextView
            android:id="@+id/tv_dynamic_TotalSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_BackgroundForTotalSpent"
            app:layout_constraintEnd_toEndOf="@+id/img_BackgroundForTotalSpent"
            app:layout_constraintStart_toStartOf="@+id/img_BackgroundForTotalSpent"
            app:layout_constraintTop_toTopOf="@+id/img_BackgroundForTotalSpent" />

        <TextView
            android:id="@+id/tv_dynamic_TotalSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_BackgroundForTotalSaved"
            app:layout_constraintEnd_toEndOf="@+id/img_BackgroundForTotalSaved"
            app:layout_constraintStart_toStartOf="@+id/img_BackgroundForTotalSaved"
            app:layout_constraintTop_toTopOf="@+id/img_BackgroundForTotalSaved" />

        <TextView
            android:id="@+id/tv_dynamic_TotalPurchases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_BackgroundForTotalPurchases"
            app:layout_constraintEnd_toEndOf="@+id/img_BackgroundForTotalPurchases"
            app:layout_constraintStart_toStartOf="@+id/img_BackgroundForTotalPurchases"
            app:layout_constraintTop_toTopOf="@+id/img_BackgroundForTotalPurchases" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>